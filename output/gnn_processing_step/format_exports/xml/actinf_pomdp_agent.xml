      <type>directed</type>
      <description/>
    </item>
    <item>
      <source>B</source>
      <target>u</target>
      <type>directed</type>
      <description/>
    </item>
    <item>
      <source>u</source>
      <target>s_prime</target>
      <type>directed</type>
      <description/>
